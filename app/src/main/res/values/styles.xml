<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TvLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mColorLabel</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TvContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TvVideoName" parent="TvContent">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TvTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorTitleBackground</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TvNotAvailable" parent="TvContent">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonVideo" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
