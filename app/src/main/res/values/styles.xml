<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:toolbarStyle">@style/Toolbar</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!--<item name="android:searchViewStyle">@style/SearchViewStyle</item>-->
        <item name="android:homeAsUpIndicator">@drawable/ic_home</item>
        <!--<item name="android:tint">@color/colorAccent</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.Detail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:toolbarStyle">@style/ToolbarDetail</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_enter</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
    </style>
    
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:elevation">0dp</item>
        <!--<item name="android:textColorSecondary">@color/colorAccent</item>-->
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <!--<item name="android:tint">@color/colorAccent</item>-->
        <!--<item name="android:colorControlNormal">@color/colorAccent</item>-->
    </style>

    <style name="ToolbarDetail" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
    </style>

    <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="TvLabel">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/mColorLabel</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TvContent">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TvVideoName" parent="TvContent">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TvTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <!--<item name="android:background">@color/colorTitleBackground</item>-->
        <item name="android:textIsSelectable">true</item>
        <!--<item name="android:fontFamily">sans-serif-condensed</item>-->
    </style>

    <style name="TvNotAvailable" parent="TvContent">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonVideo" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="GridLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#b0ffffff</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">#2affffff</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="GridContent" parent="GridLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#41ffffff</item>
    </style>

    <style name="SearchResults" parent="Base.TextAppearance.AppCompat.SearchResult">
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="SearchItem" parent="Base.TextAppearance.AppCompat.SearchResult.Title">
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#50ffffff</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="sharedElement">
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

