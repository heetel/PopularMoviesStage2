    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:navigationBarColor">@color/navigationBarColor</item>-->
    </style>


    <!--Style for the TextViews on the DetailActivity like "Overview", "Release date"-->
    <style name="TvLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mColorLabel</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="TvContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TvVideoName" parent="TvContent">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TvTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorTitleBackground</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TvNotAvailable" parent="TvContent">
        <item name="android:fontFamily">serif-monospace</item>
    </style>

</resources>
