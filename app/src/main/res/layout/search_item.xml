<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SelectableItemBackground">

    <ImageView
        android:id="@+id/si_poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        android:transitionName="poster"/>

    <TextView
        android:id="@+id/si_title"
        style="@style/SearchItem"
        tools:text="The Godfather"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/si_poster"
        android:textColor="#cecece" />

    <TextView
        android:id="@+id/si_year"
        style="@style/SearchItem"
        tools:text="1994"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/si_title"
        android:layout_toEndOf="@+id/si_poster"
        android:textColor="#999" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/si_poster"
        android:background="#98ffffff" />

</RelativeLayout>

