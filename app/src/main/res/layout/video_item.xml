<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/videoItemFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/video_item_selector"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClickVideo"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewVideoName"
            style="@style/TvVideoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_play_circle_filled_black_24dp"
            tools:text="Teaser Trailer 1" />

    </FrameLayout>

</layout>