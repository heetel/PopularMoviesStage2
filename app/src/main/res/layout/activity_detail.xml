<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.android.popularmovies.DetailActivity">

    <ScrollView
        android:id="@+id/d_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@android:color/darker_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/d_tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="42sp" />


            <android.support.v7.widget.CardView
                android:id="@+id/cv_thumbnail"
                style="@style/CardView.Dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/d_tv_movie_title"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:id="@+id/layout_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/d_iv_thumbnail"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/thumbnail"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@id/d_iv_thumbnail"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/original_title" />

                        <TextView
                            android:id="@+id/d_tv_original_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@android:color/primary_text_dark"
                            android:textSize="20sp" />

                        <TextView
                            style="@style/TvHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vote_average" />

                        <TextView
                            android:id="@+id/d_tv_vote_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@android:color/primary_text_dark"
                            android:textSize="22sp" />

                        <TextView
                            style="@style/TvHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/release_date" />

                        <TextView
                            android:id="@+id/d_tv_release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@android:color/primary_text_dark"
                            android:textSize="18sp" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_thumbnail"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TvHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overview"
                        android:textSize="22sp"/>

                    <TextView
                        android:id="@+id/d_tv_movie_overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@android:color/primary_text_dark"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
